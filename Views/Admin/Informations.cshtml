@model MyInfoVM
@{
    ViewData["Title"] = "My Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Information Form</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form role="form" method="post" href="@Url.Action("MyInformation","Admin")">
                <!-- text input -->
                <div class="form-group">
                    <label>FullName</label>
                    <input value="@Model.Name" asp-for="Name" type="text"
                           class="form-control"
                           placeholder="Enter Your FullName . . ." />
                </div>
                <div class="form-group">
                    <label>Specialty</label>
                    <input value="@Model.Specialty" asp-for="Specialty" type="text"
                           class="form-control"
                           placeholder="Enter Your Specialty . . ." />
                </div>

                <!-- textarea -->
                <div class="form-group">
                    <label>Description</label>
                    <textarea asp-for="Description" class="form-control"
                              rows="3"
                              placeholder="Enter Description . . ."></textarea>
                </div>
                <div class="form-group">
                    <label>Country</label>
                    <input value="@Model.From" asp-for="From" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label>Living City</label>
                    <input value="@Model.LivesIn" asp-for="LivesIn" type="text"
                           class="form-control"
                           placeholder="Enter City That Live Now . . ." />
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input value="@Model.Age" asp-for="Age" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input value="@Model.Phone" asp-for="Phone" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input value="@Model.Email" asp-for="Email" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label>Telegram ID</label>
                    <input value="@Model.TelegramId" asp-for="TelegramId" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label>Linkdin</label>
                    <input value="@Model.Linkdin" asp-for="Linkdin" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label>GitHub</label>
                    <input value="@Model.Github" asp-for="Github" type="text"
                           class="form-control"
                           placeholder="Enter Your Country . . ." />
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Upload Your Image</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input value="@Model.ImageName" asp-for="Image" type="file" class="custom-file-input" id="ImageFileInput" placeholder="Choose .jpg Image . . .">
                            <label class="custom-file-label" for="ImageFileInput">Choose .jpg Image</label>
                        </div>
                        <div class="input-group-append">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Upload CV</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input value="@Model.CvName" asp-for="MyCV" type="file" class="custom-file-input" id="CvFileInput">
                            <label class="custom-file-label" for="CvFileInput">Choose File</label>
                        </div>
                        <div class="input-group-append">
                        </div>
                    </div>
                </div>
                <button role="button" class="btn btn-success" type="submit">Submit</button>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
</div>
