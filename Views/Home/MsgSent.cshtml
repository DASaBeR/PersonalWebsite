@model CreateMessageVM
@{
    ViewData["Title"] = "Message Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin:auto; margin-top:20px!important; margin-left:20px!important" class="col-md-12 align-middle">
    <div class="caption wow fadeInRight align-middle">
        <h2 class="fg-dark">Dear @Model.Name</h2>
        <p>Your message has been sent. I will answer you as soon as possible.</p>
        <p class="align-middle">Thanks</p>
    </div>
</div>
